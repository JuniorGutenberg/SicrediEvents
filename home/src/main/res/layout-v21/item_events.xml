<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/item_events_margin_start"
    android:layout_marginEnd="@dimen/item_events_margin_end"
    android:layout_marginBottom="@dimen/item_events_margin_bottom"
    android:layout_marginTop="@dimen/item_events_margin_top"
    android:background="@drawable/bg_card_events"
    android:elevation="@dimen/item_events_elevation"
    android:layout_height="@dimen/item_events_height">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_card_events"
        android:layout_height="@dimen/item_events_bg_bottom_height">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:maxLines="1"
            style="@style/TextAppearance.SicrediEvents.Headline.Card"
            android:layout_marginTop="@dimen/item_events_text_margin_top"
            android:layout_marginStart="@dimen/item_events_text_margin_start"
            android:layout_marginEnd="@dimen/item_events_text_margin_end"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>